
<%= form_for(@idea) do |f| %>
  <% if @idea.errors.present? %>
    <p>
      <%= @idea.errors.full_messages.join(', ') %>
    </p>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <%= f.submit %>
<% end %>

