


<h1>Hello, welcome to Quiz 2!</h1>

<ul class="list-inline">
  <% @ideas.each do |idea| %>
  <li class="list-inline-item">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <i class="fa fa-plus"></i><h5 class="card-title"><%= link_to idea.title, idea_path(idea) %></h5>
        <p class="card-text" style="display: none"><%= idea.body %></p>
      </div>
    </div>
  </li>
  <% end %>
</ul>
